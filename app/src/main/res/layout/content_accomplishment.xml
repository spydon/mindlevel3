<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.mindlevel.activity.AccomplishmentActivity"
    tools:showIn="@layout/activity_accomplishment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/image_wrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <include
                layout="@layout/image_like"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/text_beside_fab"
            android:layout_below="@+id/image_wrapper"
            android:background="@drawable/bg_item"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_marginStart="10dip"
                android:layout_marginTop="10dip"
                android:layout_marginEnd="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ProgressBar
                    android:id="@+id/challenge_progress"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginStart="15dip"
                    android:visibility="visible" />

                <com.pchmn.materialchips.ChipView
                    android:id="@+id/challenge_chip"
                    app:backgroundColor="@color/colorAccent"
                    app:chip_hasAvatarIcon="false"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_above="@+id/challenge_progress" />
            </RelativeLayout>

            <TextView
                android:id="@+id/level"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip" />

            <TextView
                android:id="@+id/description"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip">

                <TextView
                    android:id="@+id/contributor_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dip"
                    android:layout_marginTop="8dip"
                    android:layout_marginEnd="5dip"
                    android:text="@string/accomplishment_by"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/contributor_progress"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginTop="5dip"
                    android:layout_toEndOf="@+id/contributor_by"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/contributors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/contributor_by" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/info"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/text_beside_fab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/comment_progress"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/comment_box"
                    android:hint="@string/hint_comment_box"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="6pt"
                    android:paddingStart="10dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/bg_item"
                    android:elevation="4dp"
                    android:alpha="0.7"
                    android:scrollbars="vertical"
                    android:maxLines="4"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect" />

                <ImageButton
                    android:id="@+id/post_button"
                    android:src="@drawable/send"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignBottom="@id/comment_box"
                    android:layout_alignEnd="@id/comment_box"
                    android:layout_above="@id/comment_box"
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
